<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a Comment for <%= campground.name %></h1>
        
        <div style="width: 30%; margin: 30px auto">
            <form action="/campgrounds/<%= campground.id%>/comments" method="POST">
                <div class="form-group">
                    <input type="text" name="comment[text]" placeholder="Your Comment"
                    class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="comment[author]" placeholder="Your Name"
                    class="form-control">
                </div>
                <button class="btn btn-primary btn-block">Submit</button>
            </form>
            <a href="/campgrounds/<%= campground.id %>">Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>

